<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundogiz"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:hint="Pesquisar Mesa"
        android:background="@drawable/shape_edt_mesa"
        android:textColorHint="#222"
        android:paddingLeft="7dp"
        android:drawableRight="@drawable/ic_baseline_search"
/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginHorizontal="20dp"
            android:numColumns="2"
            android:id="@+id/gridMesas"/>

    </FrameLayout>


</LinearLayout>